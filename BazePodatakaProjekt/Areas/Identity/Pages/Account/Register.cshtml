@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Izradite novi račun.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ime@email.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lozinka" />
                <label asp-for="Input.Password">Lozinka</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lozinka" />
                <label asp-for="Input.ConfirmPassword">Potvrdite lozinku</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Ime" />
                <label asp-for="Input.FirstName">Ime</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Prezime" />
                <label asp-for="Input.LastName">Prezime</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Faculty" class="form-control" placeholder="Fakultet" />
                <label asp-for="Input.Faculty">Fakultet</label>
                <span asp-validation-for="Input.Faculty" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="file" asp-for="Input.ProfilePicture" class="form-control" />
                <label asp-for="Input.ProfilePicture"></label>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Input.Bio" class="form-control" placeholder="Opis"></textarea>
                <label asp-for="Input.Bio"></label>
                <span asp-validation-for="Input.Bio" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <div class="form-check">
                    <input class="form-check-input" checked asp-for="Input.IsJobSeeker" type="radio" value="true" />
                    <label class="form-check-label">Tražim uslugu</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.IsJobSeeker" type="radio" value="false" />
                    <label class="form-check-label">Nudim uslugu</label>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrirajte se</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}